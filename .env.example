# Configuración de base de datos
DATABASE_URL="postgresql://usuario:password@host:puerto/basededatos"

# JWT Secret (usar uno seguro en producción)
JWT_SECRET="tu_clave_secreta_jwt"

# Entorno de ejecución
NODE_ENV="development"

# Orígenes permitidos para CORS (separados por coma)
# En desarrollo: no definir esta variable para ser más permisivo
# En producción: definir los orígenes específicos permitidos
CORS_ORIGINS="http://192.168.1.130,http://localhost:3000"

# Ejemplos de configuración por entorno:

# --- DESARROLLO ---
# NODE_ENV=development
# (No definir CORS_ORIGINS para permitir localhost automáticamente)

# --- PRODUCCIÓN RASPBERRY PI ---
# NODE_ENV=production
# CORS_ORIGINS=http://192.168.1.90

# --- PRODUCCIÓN GENERAL ---
# NODE_ENV=production
# CORS_ORIGINS=https://tu-dominio.com,https://www.tu-dominio.com
