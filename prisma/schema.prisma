datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "debian-openssl-1.1.x"]
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

model Menu {
  id     Int     @id @default(autoincrement())
  date   DateTime @unique
  meals  Meal[]
}

model Meal {
  id      Int      @id @default(autoincrement())
  type    MealType
  menu    Menu     @relation(fields: [menuId], references: [id])
  menuId  Int
  items   MealItem[]
}

model MealItem {
  id      Int      @id @default(autoincrement())
  meal    Meal     @relation(fields: [mealId], references: [id])
  mealId  Int
  dish    Dish     @relation(fields: [dishId], references: [id])
  dishId  Int
  order   Int      @default(0)
}

model Dish {
  id                    Int                      @id @default(autoincrement())
  name                  String                   @unique
  mealItems             MealItem[]
  allergens             DishAllergen[]
  menuTemplateMealItems MenuTemplateMealItem[]
}

model Allergen {
  id              Int                       @id @default(autoincrement())
  name            String                    @unique
  dishes          DishAllergen[]
  plateTemplates  PlateTemplateAllergen[]
}

model DishAllergen {
  dishId     Int
  allergenId Int
  dish       Dish      @relation(fields: [dishId], references: [id])
  allergen   Allergen  @relation(fields: [allergenId], references: [id])

  @@id([dishId, allergenId])
}

model PlateTemplate {
  id            Int                       @id @default(autoincrement())
  name          String                    @unique
  allergens     PlateTemplateAllergen[]
  createdAt     DateTime                  @default(now())
  updatedAt     DateTime                  @updatedAt
  usageCount    Int                       @default(0)
}

model PlateTemplateAllergen {
  plateTemplateId Int
  allergenId      Int
  plateTemplate   PlateTemplate @relation(fields: [plateTemplateId], references: [id], onDelete: Cascade)
  allergen        Allergen      @relation(fields: [allergenId], references: [id])

  @@id([plateTemplateId, allergenId])
}

// ========================================
// Modelos para Plantillas de Men√∫
// ========================================

model MenuTemplate {
  id        Int                  @id @default(autoincrement())
  name      String               @unique
  weeks     MenuTemplateWeek[]
  createdAt DateTime             @default(now())
  updatedAt DateTime             @updatedAt
}

model MenuTemplateWeek {
  id         Int               @id @default(autoincrement())
  weekNumber Int
  template   MenuTemplate      @relation(fields: [templateId], references: [id], onDelete: Cascade)
  templateId Int
  days       MenuTemplateDay[]

  @@unique([templateId, weekNumber])
}

model MenuTemplateDay {
  id     Int                  @id @default(autoincrement())
  day    String
  week   MenuTemplateWeek     @relation(fields: [weekId], references: [id], onDelete: Cascade)
  weekId Int
  meals  MenuTemplateMeal[]

  @@unique([weekId, day])
}

model MenuTemplateMeal {
  id    Int                      @id @default(autoincrement())
  type  MealType
  day   MenuTemplateDay          @relation(fields: [dayId], references: [id], onDelete: Cascade)
  dayId Int
  items MenuTemplateMealItem[]

  @@unique([dayId, type])
}

model MenuTemplateMealItem {
  id     Int              @id @default(autoincrement())
  meal   MenuTemplateMeal @relation(fields: [mealId], references: [id], onDelete: Cascade)
  mealId Int
  dish   Dish             @relation(fields: [dishId], references: [id])
  dishId Int
  order  Int              @default(0)
}

enum MealType {
  breakfast
  lunch
  dinner
}
